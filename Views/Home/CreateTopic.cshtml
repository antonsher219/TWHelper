@model Topic
@{
    ViewData["Title"] = "CreateTopic";
}

<style>
    .mybtn {
        border: solid 1px #777777;
        color: #FFFFFF;
        background: #408AB9;
        -webkit-transition: all .3s linear;
        -moz-transition: all .3s linear;
        text-transform: uppercase;
    }

        .mybtn:hover {
            color: #000000;
            background: #2b73a0;
            -webkit-transition: all .3s linear;
            -moz-transition: all .3s linear;
        }

    .word {
        width: 160px;
        background: #f0f0f0;
        border: 1px solid #333;
        padding: 10px;
        font-size: 18px;
        -moz-hyphens: auto;
        -webkit-hyphens: auto;
        -ms-hyphens: auto;
    }
</style>

<div style="width:70%; height:100%; top:-40px;background: #f2f2f2; z-index:-1;" class="position-absolute">

    <form method="post" action="forum" style="margin-top:120px" class="">
        <div class="row-2  ml-5">
            <label asp-for="Theme" class="">Theme </label>
            <br />
            <input asp-for="Theme" class="col-9" />
            <button type="submit" style="width:137px; height:30px; z-index:1; margin-left: 7%" class="col-2 mybtn text-center" >Publish</button>
            
            <span asp-validation-for="Theme" class="text-danger"></span>
        </div>

        <br />

        <div class="row-2  ml-5">
            <label asp-for="Content" class="">Description </label>
            <br />
            <textarea asp-for="Content" class="col-11," style="width:96%; height:440px"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </form>

</div>