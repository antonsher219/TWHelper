@page
@model TWHelp.Areas.Roles.Pages.CreateModel
@{
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7 mx-auto">
            <div class="my-5 py-5">
                <h3><label for="name">New role</label></h3>

                <form id="create-form" method="post">
                    <div asp-validation-summary="All" class="text-danger">@Model.StatusMessage</div>
                    <div class="form-group">
                        <label asp-for="Input.RoleName">Role name</label>
                        <input asp-for="Input.RoleName" class="form-control col-3" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
