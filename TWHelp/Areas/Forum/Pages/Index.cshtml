@*topic template*@
<template id="topictemplate">
    <div class="mx-2 my-1 p-2" style="background-color: white">
        <div class="d-flex flex-wrap">
            <div class="d-flex align-items-center mr-4">
                <div>
                    <img id="topic-author-image" src="https://picsum.photos/60/60" alt="Alternate Text" style="border-radius: 50%;" width="50" height="50" />
                </div>
            </div>
            <div class="flex-grow-1">
                <div class="d-flex flex-column flex-wrap px-1">
                    <div class="mx-1 px-1">
                        <h4 id="topic-title" class="m-0">dksadml;askd;lsa</h4>
                    </div>
                    <div class="d-flex flex-row flex-wrap" style="color: #707070;">
