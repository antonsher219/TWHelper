        </div>
    </div>
</template>

@*author template*@
<template id="authorstemplate">
    <div class="p-1 my-1">
        <div class="d-flex align-items-center flex-wrap">
            <div class="mx-1">
                <img id="person-image" src="https://picsum.photos/40/40" alt="Alternate Text" style="border-radius: 50%;" width="50" height="50" />
            </div>
            <div class="mx-2">
                <p id="person-name" class="my-0">Denys Vyskrebets</p>
            </div>
            <div class="mx-1">
                <p class="m-0"><span id="person-count">110</span> topics</p>
            </div>
        </div>
    </div>
</template>


@section Scripts {
    <script>
        window.onload = function () {
            findTopics();
            findAuthors();
        }

        const webRoot = '@Model.WebRoot';

        let from = 0;
        let to = 15;

        function pageBack() {
            if (from >= 15) {
                    from -= 15;
                    to -= 15;

                    findTopics();
            }
        }

        function pageNext() {
                from += 15;
                to += 15;

                findTopics();
        }

        async function findTopics() {
            await fetch(webRoot + '/api/forum/topics/last?from=' + from + '&to=' + to, {
                method: 'GET'
            })
                .then(response => response.json())
                .then(data => _displayTopics(data))
                .catch(error => console.error('Unable to get items.', error));
        }

        async function findAuthors() {
            await fetch(webRoot + '/api/forum/authors/last?count=15', {
                method: 'GET'
            })
                .then(response => response.json())
                .then(data => _displayAuthors(data))
                .catch(error => console.error('Unable to get items.', error));
        }

        function _displayTopics(data) {
            let container = document.getElementById('topics-content');
            container.innerHTML = '';

            data.forEach(item => {
                let newDiv = document.importNode(topictemplate.content, true);

                newDiv.getElementById('topic-title').textContent = item.header;
                newDiv.getElementById('topic-author').textContent = item.author;
                newDiv.getElementById('topic-created').href = item.created;
                newDiv.getElementById('topic-replies').href = item.numberOfReplies;
                newDiv.getElementById('topic-link').href = "/Forum/ViewTopic?topicId=" + item.topicId;
                newDiv.getElementById('topic-author-image').src = item.authorImageString;

                container.append(newDiv);
            });
        }

        function _displayAuthors(data) {
            let container = document.getElementById('authors-content');
            container.innerHTML = '';

            data.forEach(item => {
                let newDiv = document.importNode(authorstemplate.content, true);

                newDiv.getElementById('person-name').textContent = item.authorName;
                newDiv.getElementById('person-count').textContent = item.activityCount;
                newDiv.getElementById('person-image').src = item.profileImageString;

                container.append(newDiv);
            });
        }
    </script>
}
