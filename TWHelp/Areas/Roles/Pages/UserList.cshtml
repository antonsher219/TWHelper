@page
@model TWHelp.Areas.Roles.Pages.UserListModel
@{
}

<h2>User list</h2>
<table class="table">
    @foreach (var user in Model.Users)
    {
        <tr class="row">
            <td class="col-3">@user.Email</td>
            <td class="col-2">
                <form method="post">
                    <a class="btn btn-sm btn-primary" asp-area="Roles" asp-route-userId="@user.Id" asp-page="/Edit">Access rights</a>
                </form>
            </td>
        </tr>
    }
</table>