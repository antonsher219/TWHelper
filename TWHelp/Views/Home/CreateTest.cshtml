@model Test
@{
    ViewData["Title"] = "CreateTest";
}

<div style="width:90%; height:calc(100vh - 119px); background: #f2f2f2; z-index:-1;" class="mx-auto">
    <form method="post" asp-action="CreateTestAsync" asp-controller="Home" style="margin-top:0px" class="">
        <div class="row-3 ml-5 mr-5 pt-3">
            <div class="row col-12">
                <label asp-for="Theme" class="">Test Theme </label>
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-10">
                    <input asp-for="Theme" style="width:100%; height:38px; top:2px" />
                </div>
                <div class="col-2">
                    <button type="submit" style="width:100%; z-index:1;" class="btn btn-primary ml-3">Publish</button>
                </div>
            </div>

        </div>

        <br />
        <div class="row-2 ml-5">
            <div class="row col-12">
                <label asp-for="Description" class="">Description </label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row col-12">
                <textarea asp-for="Description" style="width:100%; min-height:180px; max-height:455px"></textarea>
            </div>
        </div>
        <div class="row-2 ml-5">
            <div class="row col-12">
                <label asp-for="TestUrl" class="">Url </label>
                <span asp-validation-for="TestUrl" class="text-danger"></span>
            </div>
            <div class="row col-12">
                <textarea asp-for="TestUrl" style="width:100%; min-height:180px; max-height:455px"></textarea>
            </div>
        </div>
    </form>
</div>

